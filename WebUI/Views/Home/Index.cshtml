@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Hoşgeldiniz</h1>
	@if (TempData["message"] != null)
	{
		<div class="alert alert-primary container" role="alert">
			<h5>@TempData["message"]</h5>
		</div>
	}
	<form asp-action="UploadFile" asp-controller="Home" enctype="multipart/form-data" method="post">
		<div class="container">
			<div class="col-md-12 border-3">
				<div class="mb-3">
					<label for="formFile" class="form-label">CSV Dosya Yükleme </label>
					<input class="form-control" type="file" name="file" id="file">
				</div>
			</div>
		</div>
		<div class="form-group text-right">
			<input type="submit" class="btn btn-success btn-sm w-25" value="Dosyayı Yükle" />
		</div>
	</form>
</div>

