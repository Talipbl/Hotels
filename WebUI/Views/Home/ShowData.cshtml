@model ListHotelsViewModel

@{
	ViewData["Title"] = "ShowData";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowData</h1>

<div>
	<h4>Hotel</h4>
	<hr />
	<div class="alert alert-primary container" role="alert">
		<div class="row">
			<div class="col-9">
				<h5>@TempData["message"]</h5>
			</div>
			<div class="col-3">
				<a asp-action="WriteAsJson" asp-controller="Home" asp-route-path="@Model.Path" type="button" class="btn btn-light">Save as Json</a>
				<a asp-action="WriteAsXml" asp-controller="Home" asp-route-path="@Model.Path" type="button" class="btn btn-light">Save as Xml</a>
			</div>
		</div>
	</div>
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Address</th>
				<th scope="col">Star</th>
				<th scope="col">Contact</th>
				<th scope="col">PhoneNumber</th>
				<th scope="col">Url</th>
			</tr>
		</thead>
		<tbody>
			@{
				int i = 0;
			}
			@foreach (var hotel in Model.Hotels)
			{
				i++;
				<tr>
					<th scope="row">@i</th>
					<td>@hotel.Name</td>
					<td>@hotel.Address</td>
					<td>@hotel.Star</td>
					<td>@hotel.Contact</td>
					<td>@hotel.PhoneNumber</td>
					<td>@hotel.Url</td>
				</tr>
			}
		</tbody>
	</table>
</div>
